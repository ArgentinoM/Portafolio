---
import ProyectList from "../components/ProyectList.astro";
import SkillsList from "../components/SkillsList.astro";
import Layout from "../layouts/Layout.astro";


const titlePage = 'Argentino Monroy - Mi portafoli';

---


<Layout title={ titlePage }>

	<!-- header -->
	<header class="grid grid-cols-2 max-h-screen justify-items-center items-center">

		<div class="flex flex-col gap-10 pr-48">
			
			<div >
				<div class="flex justify-between text-7xl">
					<span >Hola,</span>
					<span>soy</span>
				</div>

				
				<h1 class="text-primary font-bold text-8xl" >Argentino Monroy</h1>
			</div>



			<p class="text-font-secondary">Desarrollador <b>Fullstack</b> especializado en crear 
				productos digitales completos: interfaces limpias, 
				sistemas estables y arquitecturas escalables. 
				Combino diseño, técnica y orden para construir soluciones 
				eficientes y pensadas para durar.
			</p>

			<div class="flex justify-center items-center">

				<a href="" class="links tooltip" data-tip="Contactame">
					<i class='bx  bx-envelope'></i> 
				</a>

				<a href="" class="links tooltip" data-tip="Descargar CV">
					<i class='bx  bx-file'></i> 
				</a>

				<a href="https://github.com/ArgentinoM" class="links tooltip" data-tip="GitHub">
    				<i class="fa-brands fa-github"></i>
				</a>

				<a href="https://www.linkedin.com/in/argentino-monroy-valencia-42a2052aa/" class="links tooltip" data-tip="Linkedin">
					<i class="fa-brands fa-square-linkedin"></i>
				</a>

			</div>

		</div>

		<div class="h-screen flex justify-end w-full items-center">

			<img class="object-cover  h-[60%] rounded-md shadow-md shadow-secondary perfil" 
			src="https://res.cloudinary.com/dxxf2jyg8/image/upload/v1765478989/IMG_1702-Mejorado-NR_y79sou.jpg" 
			alt="Perfil">

		</div>


	</header>

	<!-- Skills -->
	<SkillsList/>

	<!-- Proyects -->
	 <ProyectList/>

</Layout>


<style>
	.links{
		width: 3rem;
		height: 3rem;
		display: flex;
		align-items: center;
		justify-content: center;
		margin-left: 1rem;
		font-size: 1.5rem;
		background-color: #E4DFD6;

		border-radius: 50%;
		transition: all 0.5s ease;
	}

	.links:hover{
		background-color: #A78A73;
		color: white;
	}

	.tooltip {
    position: relative;
	}

	.tooltip::after {
		content: attr(data-tip);
		position: absolute;
		bottom: 130%;    
		left: 50%;
		transform: translateX(-50%);
		background: #000;
		color: #fff;
		padding: 4px 8px;
		border-radius: 6px;
		font-size: 0.75rem;
		white-space: nowrap;
		opacity: 0;
		pointer-events: none;
		transition: opacity .3s ease;
	}

	.tooltip:hover::after {
		opacity: 1;
	}


</style>
