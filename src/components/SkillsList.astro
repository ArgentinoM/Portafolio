<div class="grid grid-cols-3 sm:grid-cols-4 lg:grid-cols-6 gap-6">
    {
        Skills.map(({ imgUrl, name }) => (

            <div class="group flex flex-col items-center gap-3 p-4 rounded-xl
                        backdrop-blur-xl bg-white/10 border border-white/20
                        shadow-md transition-all duration-300
                        hover:shadow-secondary hover:shadow-xl">

                <div class="relative w-14 h-14 flex items-center justify-center">

                    <div
                        class="absolute inset-0 rounded-full bg-white/20
                               backdrop-blur-md border border-white/30
                               transition-transform duration-300
                               group-hover:scale-110">
                    </div>

                    <img src={imgUrl} alt={name}
                         class="relative w-8 h-8 transition-all duration-300
                                group-hover:scale-110 group-hover:drop-shadow-lg" />
                </div>

                <span class="font-semibold uppercase tracking-wide text-xs">
                    {name}
                </span>

            </div>
            
        ))
    }
</div>



</section>