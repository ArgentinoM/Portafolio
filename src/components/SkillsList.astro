---
import { Skills } from "../data/skills";
import TitlePage from "./TitlePage.astro";
---

<section
  id="skills"
  class="py-20 px-6 max-w-7xl mx-auto text-center scroll-mt-24 overflow-x-hidden"
>
  <TitlePage title="TecnologÃ­as y habilidades" />

  <div
    class="grid gap-6
           grid-cols-2
           sm:grid-cols-3
           md:grid-cols-4
           lg:grid-cols-6"
  >
    {
      Skills.map(({ imgUrl, name }, index) => (
        <div
          class="animate-fade-right group flex flex-col items-center gap-3 p-4 rounded-xl
                 bg-white/10 border border-white/20
                 shadow-sm transition
                 hover:shadow-lg hover:shadow-secondary/40"
          style={`--delay: ${index * 60}ms`}
        >
          <div class="relative w-14 h-14 flex items-center justify-center">
            <div
              class="absolute inset-0 rounded-full
                     bg-white/20 border border-white/30
                     transition-transform duration-300
                     group-hover:scale-110"
            ></div>

            <img
              src={imgUrl}
              alt={name}
              width="32"
              height="32"
              loading="lazy"
              class="relative w-8 h-8
                     transition-transform duration-300
                     group-hover:scale-110"
            />
          </div>

          <span
            class="font-medium uppercase tracking-wide text-xs
                   text-font-secondary"
          >
            {name}
          </span>
        </div>
      ))
    }
  </div>
</section>
