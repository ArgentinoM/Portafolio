---
import { Icon } from "astro-icon/components";

---

<nav class="flex p-8 bg-page justify-between items-center fixed w-screen z-10 xl:px-30">

    <a href="#header" class="nav-link text-[1.3rem]">PORTAFOLIO</a>

    <div class="hidden md:flex gap-6 text-base">
        <a class="nav-link" href="#skills">Tecnologías</a>
        <a class="nav-link" href="#projects">Proyectos</a>
        <a class="nav-link" href="#about">Sobre mí</a>
        <a class="nav-link" href="#contact">Contáctame</a>
    </div>

    <div class="flex gap-10 items-center justify-center text-[1.7em]">

        <button class="p-2 cursor-pointer" id="btn-mode">
            <Icon data-sun name="sun"/>
            <Icon data-moon name="moon" class="hidden"/>
        </button>

    </div>

</nav>

<style>
    @reference "../styles/global.css";

nav {
  background:
    radial-gradient(
      120% 160% at 50% -35%,
      rgba(167, 138, 115, 0.35),
      rgba(167, 138, 115, 0.18) 35%,
      rgba(167, 138, 115, 0.08) 55%,
      rgba(167, 138, 115, 0.03) 70%,
      transparent 85%
    ),
    var(--color-page);
}




    .nav-link{
        @apply relative py-[.4rem] px-[.6rem] z-10
    }

    .nav-link::before{
        content: "";
        @apply absolute inset-[50%_auto_auto_50%] w-8 h-8 rounded-full 
            bg-primary opacity-0 blur-xl scale-75
            transition-all duration-300 ease-in-out -z-10
    }

    .nav-link::after {
        content: "";
        @apply absolute left-0 -bottom-1 w-0 h-0.5 
            bg-primary transition-all duration-300 ease-in
    }

    .nav-link:hover::before {
        @apply opacity-70 scale-100
    }
    .nav-link:hover::after {
        @apply w-full
    }

</style>

<script src="../scripts/navigate.ts"></script>


